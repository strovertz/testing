import tkinter as tk
import webbrowser
import subprocess

root = tk.Tk()
root.geometry("400x400")

# Define o canvas com uma imagem de fundo
canvas = tk.Canvas(root, width=400, height=400)
canvas.pack()
img = tk.PhotoImage(file='foto2.jpg')
canvas.create_image(0, 0, image=img, anchor="nw")

# Define o bot√£o "Executar Agriscan"
def run_agriscan():
    subprocess.run(["python", "agriscan.py"])
    webbrowser.open_new_tab("mapa.html")

btn_agriscan = tk.Button(canvas, text="Executar Agriscan", command=run_agriscan)
btn_agriscan.pack(pady=10)

root.mainloop()
